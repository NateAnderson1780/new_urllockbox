<div class="alert"></div>

<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form>

<div class="container">
  <div id="links-list">
    <% @links.each do |link| %>
      <div class='link' data-id='<%= link.id %>' id="link-<%= link.id %>">
        <p class="link-title">Title: <%= link.title %></p>
        <p class="link-url">URL: <%= link.url %></p>
        <p class="link_read">Read?: <%= link.read %></p>

        <p class="link_buttons">
          <button class="mark-read">Mark as Read</button>
          <button class='edit-link'><%= link_to "Edit", edit_link_path(link.id) %></button>
        </p>

      </div>
    <% end %>
  </div>
</div>



